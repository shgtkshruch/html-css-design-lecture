doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title CSS Cafe
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // build:css styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='../bower_components/sanitize-css/dist/sanitize.css')
    // endbower
    // endbuild
    // build:css styles/main.css
    link(rel='stylesheet', href='styles/main.css', media='all')
    // endbuild
  body
    #wrapper
      include partials/common/Header
      include partials/top/ImageSlide
      include partials/top/EntryPanel

      section.Section
        h2.sectionLabel.l-column Content
        include partials/top/OverlayPanel
        include partials/top/IconPanel

    // build:js scripts/vendor.js
    // bower:js
    script(src='../bower_components/flipsnap/flipsnap.js')
    script(src='../bower_components/lodash/lodash.js')
    // endbower
    // endbuild
    // build:js scripts/main.js
    script(src='scripts/main.js')
    // endbuild
